<%= form_tag login_path do %>
  <div class="form-row">
    <div class="col">
      <%= label_tag :email %>
      <%= text_field_tag :email, '', class: 'form-control', placeholder: 'Email', autofocus: true %>
    </div>
    <div class="col">
      <%= label_tag :password %>
      <%= password_field_tag :password, '', class: 'form-control', placeholder: 'Password' %>
    </div>
  </div>
  <%= submit_tag 'Submit', class: 'user-submit' %>
<% end %>

<!DOCTYPE html>
<html>
  <head>
    <title>GifGenerator</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light">
      <a class="navbar-brand" href="#">GifGenerator</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <% if current_admin? %>
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
            <%= link_to 'Home', user_path(current_user), class: 'nav-link'%>
            </li>
            <li class="nav-item">
              <%= link_to 'All Gifs', gifs_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Favorites', user_favorites_path(current_user), class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Add Gifs', new_admin_category_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Remove Categories', admin_categories_path, class: 'nav-link' %>
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'Log Out', logout_path, method: 'delete', class: 'nav-link' %>
            </li>
          </ul>
        <% elsif current_user %>
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
            <%= link_to 'Home', user_path(current_user), class: 'nav-link'%>
            </li>
            <li class="nav-item">
              <%= link_to 'All Gifs', gifs_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Favorites', user_favorites_path(current_user), class: 'nav-link' %>
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'Log Out', logout_path, method: 'delete', class: 'nav-link' %>
            </li>
          </ul>
        <% else %>
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <%= link_to 'Dashboard', root_path, class: 'nav-link'%>
            </li>
            <li class="nav-item">
              <%= link_to 'All Gifs', gifs_path, class: 'nav-link' %>
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'Log In', login_path, class: 'nav-link' %>
            </li>
          </ul>
        <% end %>
      </div>
    </nav>
    <%= yield %>
  </body>
  <footer class='centered giphy-logo'>
    <%= image_tag 'PoweredBy_200px-White_HorizText.png' %>
  </footer>
</html>
